{
  "manifest_version": 3,
  "name": "My Meowcho",
  "version": "1.0",
  "description": "A cat-themed progress tracker with interactive timers and rewards.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "assets/icons/cat-icon.png",
      "128": "assets/icons/cat-icon-large.png"
    },
    "default_title": "My Meowcho"
  },
  "icons": {
    "48": "assets/icons/cat-icon.png",
    "128": "assets/icons/cat-icon-large.png"
  }
}

