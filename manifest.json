{
  "manifest_version": 3,
  "name": "My Meowcho",
  "version": "1.0",
  "description": "Interactive cat progress tracker with rewards and sounds.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "48": "assets/icons/cat-icon.png",
    "128": "assets/icons/cat-icon-large.png"
  }
}

